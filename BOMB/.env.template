# ============================================
# Casa 24 Records - Environment Configuration
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# ============================================
# DISCORD CONFIGURATION
# ============================================
# Get these from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE
DISCORD_CLIENT_ID=YOUR_DISCORD_CLIENT_ID_HERE
DISCORD_GUILD_ID=YOUR_DISCORD_GUILD_ID_HERE

# ============================================
# API CREDENTIALS
# ============================================
# Spotify API - https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=YOUR_SPOTIFY_CLIENT_ID_HERE
SPOTIFY_CLIENT_SECRET=YOUR_SPOTIFY_CLIENT_SECRET_HERE

# YouTube API - https://console.cloud.google.com/apis
YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY_HERE

# Instagram API - https://developers.facebook.com/apps
INSTAGRAM_ACCESS_TOKEN=YOUR_INSTAGRAM_ACCESS_TOKEN_HERE
INSTAGRAM_BUSINESS_ACCOUNT_ID=YOUR_INSTAGRAM_BUSINESS_ID_HERE

# ============================================
# CLOUDFLARE CONFIGURATION
# ============================================
# Your Cloudflare Worker endpoint for credential storage
CLOUDFLARE_WORKER_URL=https://your-worker.workers.dev/api/credentials
CLOUDFLARE_API_TOKEN=YOUR_CLOUDFLARE_API_TOKEN_HERE

# ============================================
# SERVICE CONFIGURATION
# ============================================
# Node Environment
NODE_ENV=production

# Service Ports
DISCORD_SERVICE_PORT=3000
ANALYTICS_SERVICE_PORT=3001
PREDICTION_SERVICE_PORT=3002
DASHBOARD_PORT=3003

# Service URLs (for inter-service communication)
ANALYTICS_SERVICE_URL=http://analytics:3001
PREDICTION_SERVICE_URL=http://predictions:3002
DATA_SERVICE_URL=http://data-collector:3004

# ============================================
# CACHE CONFIGURATION
# ============================================
# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# ============================================
# DATABASE CONFIGURATION (Future)
# ============================================
# PostgreSQL Configuration
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=casa24_analytics
# DB_USER=casa24
# DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE
# DATABASE_URL=postgresql://casa24:password@postgres:5432/casa24_analytics

# ============================================
# MONITORING & LOGGING
# ============================================
# Log Levels: error, warn, info, verbose, debug, silly
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry Error Tracking (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# DataDog APM (Optional)
# DD_API_KEY=YOUR_DATADOG_API_KEY
# DD_SITE=datadoghq.com

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://casa24records.com

# JWT Secret (for future web dashboard)
# JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_HERE
# JWT_EXPIRATION=7d

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features
ENABLE_PREDICTIONS=true
ENABLE_ANALYTICS_API=true
ENABLE_WEB_DASHBOARD=false
ENABLE_METRICS_EXPORT=true

# ============================================
# DATA CONFIGURATION
# ============================================
# Data file paths
DATA_PATH=/app/data/latest.json
HISTORICAL_DATA_PATH=/app/data/historical

# Data update schedule (cron format)
DATA_UPDATE_SCHEDULE=0 2 * * *

# ============================================
# ML/AI CONFIGURATION
# ============================================
# Model configuration
ML_MODEL_PATH=/app/models
ML_CONFIDENCE_THRESHOLD=0.75
ML_PREDICTION_MAX_DAYS=90

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
# Container Registry
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=casa24records

# Deployment Environment
DEPLOYMENT_ENV=production
DEPLOYMENT_REGION=us-east-1

# ============================================
# BACKUP CONFIGURATION
# ============================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=casa24-backups

# ============================================
# NOTES
# ============================================
# 1. Never commit this file with actual values to Git
# 2. Use GitHub Secrets for CI/CD pipelines
# 3. Use cloud provider secret managers in production
# 4. Rotate credentials regularly
# 5. Different values for dev/staging/production environments