# ============================================
# Casa 24 Records Bot - Configuration
# ============================================
# Copy this file to .env and add your credentials
# NEVER commit .env to version control!

# Discord Credentials (REQUIRED)
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=PASTE_YOUR_BOT_TOKEN_HERE
DISCORD_CLIENT_ID=PASTE_YOUR_CLIENT_ID_HERE
DISCORD_GUILD_ID=PASTE_YOUR_GUILD_ID_HERE

# Data Configuration
DATA_PATH=../data/latest.json
HISTORICAL_DATA_PATH=../data/historical

# Service Configuration (for scalable architecture)
NODE_ENV=production
SERVICE_NAME=discord-bot
LOG_LEVEL=info

# Optional: Redis Cache (for performance)
# REDIS_URL=redis://localhost:6379

# Optional: Analytics Service (for microservices)
# ANALYTICS_SERVICE_URL=http://localhost:3001

# Optional: Prediction Service (for ML features)
# PREDICTION_SERVICE_URL=http://localhost:3002
